#!/bin/bash
set -e

echo "=== 域名绑定 VPS IP+端口并开启 HTTPS ==="

read -rp "请输入你的域名（例如 example.com）: " DOMAIN
read -rp "请输入服务运行的本地端口（例如 8181）: " LOCAL_PORT

NGINX_SITE_CONF="/etc/nginx/sites-enabled/${DOMAIN}"

# 生成标准 nginx 配置
cat > "$NGINX_SITE_CONF" <<EOF
server {
    listen 80;
    server_name $DOMAIN;

    location / {
        proxy_pass http://127.0.0.1:$LOCAL_PORT;
        proxy_set_header Host \$host;
        proxy_set_header X-Real-IP \$remote_addr;
        proxy_set_header X-Forwarded-For \$proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto \$scheme;
    }
}
EOF

echo "✅ 配置已写入 $NGINX_SITE_CONF"

# 测试 nginx 配置
if nginx -t; then
    echo "🔹 nginx 配置测试通过，正在重载 nginx..."
    systemctl reload nginx
else
    echo "❌ nginx 配置测试失败，请检查配置文件"
fi

# 获取 HTTPS 证书
echo "🔹 正在为 $DOMAIN 获取 HTTPS 证书..."
certbot --nginx -d "$DOMAIN" --non-interactive --agree-tos -m your-email@example.com || {
    echo "⚠️ 证书获取失败，请检查域名解析和 nginx 配置"
}

echo "=============================="
echo "域名 $DOMAIN 已绑定到 http://127.0.0.1:$LOCAL_PORT"
echo "HTTPS 已开启，可通过 https://$DOMAIN 访问"
echo "请确保 DNS 已解析到 VPS 公网 IP"
echo "=============================="

# 等待用户确认，不自动退出
read -rp "按回车返回上一级菜单..." dummy
